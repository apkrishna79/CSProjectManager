@page
@model ProjectModel
@{
    ViewData["Title"] = "Create Project";
}

<div class="container mt-5">
    <h1 class="mb-4">Create Project</h1>

    <form method="post">
        <div class="form-group mb-4">
            <label for="ProjectName">Project Name:</label>
            <input asp-for="ProjectName" class="form-control" required maxlength="100" />
        </div>

        <div class="form-group mb-4">
            <label for="Description">Project Description:</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
        </div>

        <div class="form-group mb-4">
            <label for="SelectedTeamId">Team Working on this Project:</label>
            <select asp-for="SelectedTeamId" class="form-control custom-select" required>
                @foreach (var team in Model.TeamAndClass)
                {
                    <option value="@team.Key.Id">@team.Key.Name (@team.Value)</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary btn-primary">Create Project</button>
        <a href="/Dashboard" class="btn btn-danger ml-2">Cancel</a>
    </form>
</div>