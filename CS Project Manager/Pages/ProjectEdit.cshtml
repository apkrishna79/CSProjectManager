@page
@model ProjectEditModel
@{
    ViewData["Title"] = "Edit Project";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Project</h2>

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <p>@Model.ErrorMessage</p>
        </div>
    }

    <form method="post" asp-page-handler="UpdateName" asp-route-projectId="@Model.ProjectId" class="mb-4">
        <div class="form-group mb-4">
            <label for="ProjectName">Project Name</label>
            <input asp-for="ProjectName" class="form-control" maxlength="255" required />
        </div>
        <button type="submit" class="btn btn-primary">Update Name</button>
    </form>

    <form method="post" asp-page-handler="UpdateDescription" asp-route-projectId="@Model.ProjectId" class="mb-4">
        <div class="form-group mb-4">
            <label for="ProjectDescription">Project Description</label>
            <input asp-for="ProjectDescription" class="form-control" maxlength="255" required />
        </div>
        <button type="submit" class="btn btn-primary">Update Description</button>
    </form>

    <form method="get" asp-page="/RequirementsStack">
        <input type="hidden" name="projectId" value="@Model.ProjectId.ToString()" />
        <button type="submit" class="btn btn-primary">Back</button>
    </form>
</div>
