@page
@model CS_Project_Manager.Pages.NewPostModel
@{
<form method="post">
    <style>
        .full-width {
            width: 100%;
            padding: 8px;
            font-size: 16px;
        }
    </style>

    <div>
        <label>Title</label>
        <input asp-for="Title" class="full-width" required maxlength="100" />
    </div>

    <div>
        <label>Body</label>
        <textarea asp-for="Body" class="full-width" rows="5" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Publish</button>
</form>
}
