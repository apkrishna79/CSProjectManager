<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & Custom Styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/custom.css" />
</head>
<body>
    <!-- Navbar -->
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="container">
                <a class="navbar-brand" asp-page="/Dashboard">CS Project Manager</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Account">Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/SelectDiscussionBoard">Discussion Boards</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Todo">Todo Lists</a>
                        </li>
                    </ul>
                </div>
            </div>
            <form method="post" asp-page-handler="Logout" class="d-inline" style="position: absolute; top: 10px; right: 10px;">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        }
        else
        {
        <div class="container">
            <a class="navbar-brand" asp-page="/Landing">CS Project Manager</a>
        </div>
        }
    </header>
s

    <!-- Main Content -->
    <main role="main" class="container mt-4">
        @RenderBody()
    </main>    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>