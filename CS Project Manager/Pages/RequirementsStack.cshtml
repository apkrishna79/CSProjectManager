@page
@model CS_Project_Manager.Pages.RequirementsStackModel

<h2>Requirements Stack</h2>

<!-- Input Form -->
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Requirement ID</th>
                <th>Description</th>
                <th>Story Points</th>
                <th>Priority</th>
                <th>Sprint No</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input asp-for="NewRequirement.RequirementID" class="form-control" /></td>
                <td><input asp-for="NewRequirement.Description" class="form-control" /></td>
                <td><input asp-for="NewRequirement.StoryPoints" class="form-control" /></td>
                <td><input asp-for="NewRequirement.Priority" class="form-control" /></td>
                <td><input asp-for="NewRequirement.SprintNo" class="form-control" /></td>
                <td><button type="submit" asp-page-handler="Add" class="btn btn-primary">Add Requirement</button></td>
            </tr>
        </tbody>
    </table>
</form>

<hr>

<!-- Display Table -->
<h3>Added Requirements</h3>
<table class="table">
    <thead>
        <tr>
            <th>Requirement ID</th>
            <th>Description</th>
            <th>Story Points</th>
            <th>Priority</th>
            <th>Sprint No</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model.Requirements)
        {
            <tr>
                <form method="post">
                    <input type="hidden" name="Id" value="@req.Id" />
                <td><input type="text" value="@req.RequirementID" class="form-control" disabled /></td>
                <td><input type="text" value="@req.Description" class="form-control" disabled /></td>
                <td><input type="number" value="@req.StoryPoints" class="form-control" disabled /></td>
                <td><input type="number" value="@req.Priority" class="form-control" disabled /></td>
                <td><input type="number" value="@req.SprintNo" class="form-control" disabled /></td>
                <td>
                    <button type="submit" asp-page-handler="Update" class="btn btn-warning">Update</button>
                    <button type="submit" asp-page-handler="Remove" class="btn btn-danger">Remove</button>
                </td>
                </form>
            </tr>
        }
    </tbody>
</table>
